<div class="header">
  <div class="col-sm-2" id="header-left">
    <h2><a class="menu-item-link" ui-sref="home" href>Delve</a></h2>
  </div>
  <div class="col-sm-8" id="header-center">
    <div class="form-group row" style="margin-top:30px;">
      <div class="col-sm-5">
        <input ng-model="search_criteria" class="form-control" placeholder="Charlie's, Chicken Marsala, Appetizers, etc">
      </div>
      <div class="col-sm-3">
        <ol class="nya-bs-select form-control" ng-model="search_category">
          <li data-value="restaurant" class="nya-bs-option">
            <a>Restaurant</a>
          </li>
          <li data-value="restaurant_category" class="nya-bs-option">
            <a>Restaurant Category</a>
          </li>
          <li data-value="menu_item" class="nya-bs-option">
            <a>Menu Item</a>
          </li>
          <li data-value="menu_item_category" class="nya-bs-option">
            <a>Menu Item Category</a>
          </li>
        </ol>
      </div>
      <div class="col-sm-3">
        <input ng-model="search_location" class="form-control">
      </div>
      <div class="col-sm-1">
        <button type="button" class="btn btn-lg" ng-click="search_by_category">
          Search
        </button>
      </div>
    </div>
  </div>
  <div class="col-sm-2" id="header-buttons">
    <div class="row">
      <div class="col-sm-offset-4 col-sm-6">
        <button type="button" class="btn btn-md btn-success" ng-show= "isNotAuthenticated()"style="width:100%;text-align:center;" data-toggle="modal" data-target="#login">Login</button>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-4 col-sm-6">
        <button type="button" class="btn btn-md btn-warning " ng-show= "isNotAuthenticated()" style="width:100%;text-align:center;" data-toggle="modal"  data-target="#signup">Signup</button>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-2">
        <h6 ng-show= "isAuthenticated()" style="width:100%; text-align: center">{{user.email}}</h6>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-4 col-sm-6">
        <button type="button" class="btn btn-md btn-danger" ng-show= "isAuthenticated()" style="width:100%;text-align:center;" ng-click="logout()">Log Out</button>
      </div>
    </div>
  </div>
</div>